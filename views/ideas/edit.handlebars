<div class="card card-body">
	<img src="/img/logo.png" alt="Vidjot Logo" class="m-auto" style="width: 100px">
	<h3 class="m-auto">Video Idea</h3>
	<form action="/ideas/{{_id}}" method="post">
		<input type="hidden" name="_method" value="PUT">
		<div class="form-group">
			<label>Title</label>
			<input type="text" class="form-control" name="title" placeholder="Title" value="{{title}}">
		</div>
		<div class="form-group">
			<label>Detail</label>
			<textarea class="form-control" name="detail" rows="3">{{detail}}</textarea>
		</div>
		<input type="submit" value="Save" class="btn btn-success">
	</form>
</div>