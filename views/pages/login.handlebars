{{else}}

{{/each}}

<div class="card card-body">
	<img src="/img/logo.png" alt="Vidjot Logo" class="m-auto" style="width: 100px">
	<h3 class="m-auto">Login Form</h3>
	<form action="/login" method="post">
		<div class="form-group">
			<label>Email</label>
			<input type="email" class="form-control" name="email" placeholder="example@email.com" value="">
		</div>
		<div class="form-group">
			<label>Password</label>
			<input type="password" name="password" placeholder="********" class="form-control">
		</div>
		<input type="submit" value="Login" class="btn btn-success">
	</form>
</div>